                "protocol": [
                    "mqtt",
                    "http"
                ]
            },
            "data": {
                "TemperatureReader": {
                    "tempC": true
                },
                "SystemMonitor": {
                    "largestBlock": true,
                    "uptime": true,
                    "loopDelay": true
                },
                "DataExchanger": {
                    "interval": true,
                    "trigger": true
